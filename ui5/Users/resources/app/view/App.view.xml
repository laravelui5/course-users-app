<mvc:View
    controllerName="io.pragmatiqu.users.controller.App"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <SplitApp id="app">
        <masterPages>
            <Page title="Users">
                <subHeader>
                    <Toolbar>
                        <SearchField
                            width="100%"
                            placeholder="Search users..."
                            liveChange=".onSearch"
                        />
                    </Toolbar>
                </subHeader>
                <content>
                    <List
                        id="usersList"
                        items="{/Users}"
                        mode="SingleSelectMaster"
                    >
                    <StandardListItem
                        title="{name}"
                        description="{email}"
                        />
                    </List>
                </content>
            </Page>
        </masterPages>
        <detailPages>
            <Page title="{i18n>appTitle}">
                <content>
                    <IllustratedMessage
                        description="You've successfully setup your LaravelUi5 App"
                        enableVerticalResponsiveness="true"
                        illustrationType="sapIllus-Achievement"
                    />
                </content>
            </Page>
        </detailPages>
    </SplitApp>
</mvc:View>
